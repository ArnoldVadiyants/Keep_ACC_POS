<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             android:gravity="center"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop"
        android:src="@drawable/main_back"
        android:background="@drawable/back_color"/>

    <ImageView
        android:layout_width="192dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:layout_gravity="left|top"
        android:background="@drawable/label_back"
        android:src="@drawable/logo"
        android:layout_marginLeft="@dimen/outer_margin_big"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="14dp"
        android:paddingTop="28dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/activity_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/outer_margin_big"
                android:hint="@string/hint_login"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/activity_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/outer_margin_big"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                />

            <!-- Login Button -->

            <Button
                android:id="@+id/activity_login_sign_in_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/button_back_blue_gradient"
                android:text="@string/button_sign_in"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/outer_margin_big"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Link to Login Screen -->

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_box_remember"
                android:id="@+id/activity_login_remember_checkBox"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/outer_margin_medium"
                />

            <Button
                android:id="@+id/activity_login_help_btn"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/button_help"
                android:textAllCaps="false"
                android:textColor="@color/btn_help"
                android:textSize="15dp"
                android:singleLine="false"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_back_gray"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </FrameLayout>
    </LinearLayout>

</FrameLayout>