<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="@dimen/outer_margin">

    <ImageButton
        android:layout_width="@dimen/icon_size_big"
        android:layout_height="@dimen/icon_size_big"
        android:id="@+id/dialog_bill_click_plus_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_back_green"
        android:src="@drawable/icon_plus"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/outer_margin"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size_big"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/dialog_bill_click_count_tv"
        android:layout_toRightOf="@+id/dialog_bill_click_plus_btn"
        android:layout_toEndOf="@+id/dialog_bill_click_plus_btn"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/outer_margin"
        android:background="@drawable/text_back"
        android:padding="@dimen/outer_margin_small"
        android:gravity="center_vertical|center_horizontal"
        android:minEms="5"
        android:inputType="number"
       />

    <ImageButton
        android:layout_width="@dimen/icon_size_big"
        android:layout_height="@dimen/icon_size_big"
        android:id="@+id/dialog_bill_click_minus_btn"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dialog_bill_click_count_tv"
        android:layout_toEndOf="@+id/dialog_bill_click_count_tv"
        android:background="@drawable/button_back_red"
        android:scaleType="centerInside"
        android:src="@drawable/icon_minus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_mode"
        android:id="@+id/dialog_bill_click_add_mode"
        android:layout_below="@+id/dialog_bill_click_count_tv"
        android:layout_alignRight="@+id/dialog_bill_click_minus_btn"
        android:layout_alignEnd="@+id/dialog_bill_click_minus_btn"
        android:layout_alignLeft="@+id/dialog_bill_click_plus_btn"
        android:layout_alignStart="@+id/dialog_bill_click_plus_btn"
        android:layout_marginTop="@dimen/outer_margin"
        android:padding="0dp"/>
</RelativeLayout>